<h1>Details about book</h1>

<p>Name: <%= @book.name %></p>
<p>Description: <%= @book.description %></p>
<p>Price: <%= @book.price %></p>

<p>
  Average Stars: 
  <% @average_stars.times do |i| %>
    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>

  <% end %>
</p>
<p>
  Reviews:
  <ul>
    <% @book.reviews.each do |review| %>
      <li>
        <%= review.name %>: <br>
        <%= review.text %> <br>
        <%= review.stars %>
      </li>
    <% end %>
  </ul>
</p>

<p>
  <%= render partial: 'shared/form_review', locals: {creation: [@book, @review]} %>
</p>