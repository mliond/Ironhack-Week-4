    <div class="media-left">
      <a href="/concerts/<%= concert.id %>">
        <img class="media-object" src=<%= concert.poster %> alt="..." height="64px">
      </a>
    </div>
    <div class="media-body">
      <h4 class="media-heading">
      <%= link_to "#{concert.band} @ #{concert.venue}", concert_path(concert) %>
      </h4>
      <%= concert.date.strftime("%d.%m %H:%M h") %>, <%= concert.city %>:
      <br>
      <%= concert.description %>.
      <br>
